      function validateForm() {
    var x = document.forms["webform-client-form-549788"]["edit-submitted-first-name"].value;
    if (x == null || x == "") {
        alert("Please enter your first name");
        return false;
    }
    var x = document.forms["webform-client-form-549788"]["edit-submitted-last-name"].value;
    if (x == null || x == "") {
        alert("Please enter your last name");
        return false;
    }
    var x = document.forms["webform-client-form-549788"]["edit-submitted-i-agree-with-actionaids-privacy-policy-1"].value;
    if (x == null || x == "") {
        alert("Please read and agree to our privacy policy");
        return false;
    }
    var x = document.forms["webform-client-form-549788"]["edit-submitted-e-mail-address"].value;
    var atpos = x.indexOf("@");
    var dotpos = x.lastIndexOf(".");
    if (atpos< 1 || dotpos<atpos+2 || dotpos+2>=x.length) {
        alert("Please enter a valid e-mail address");
        return false;
    }
}
    </script>

